{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Yarp": "Information"
    }
  },
  "AllowedHosts": "*",
  "Jwt": {
    "Issuer": "UITVibes.AuthService",
    "Audience": "UITVibes.Client",
    "ExpiresInMinutes": "60",
    "RefreshTokenExpiresInDays": "7"
  },
  "ReverseProxy": {
    "Routes": {
      "auth-route": {
        "ClusterId": "auth-cluster",
        "Match": {
          "Path": "/auth/{**catch-all}"
        },
        "Transforms": [
          {
            "PathPattern": "/api/{**catch-all}"
          }
        ]
      },
      "user-follow-route": {
        "ClusterId": "user-cluster",
        "Match": {
          "Path": "/user/follow/{**catch-all}"
        },
        "Transforms": [
          {
            "PathPattern": "/api/follow/{**catch-all}"
          }
        ]
      },
      "user-profile-route": {
        "ClusterId": "user-cluster",
        "Match": {
          "Path": "/user/userprofile/{**catch-all}"
        },
        "Transforms": [
          {
            "PathPattern": "/api/userprofile/{**catch-all}"
          }
        ]
      }
    },
    "Clusters": {
      "auth-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "https://localhost:7233"
          }
        }
      },
      "user-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "https://localhost:7116"
          }
        }
      }
    }
  }
}
